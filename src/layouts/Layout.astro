---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Dashboard Power BI",
  description = "Vista incrustada — estética sobria y responsiva"
} = Astro.props;
---

<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <meta name="description" content={description} />
  <title>{title}</title>
  <style is:global>
    :root{
      --bg:#f5f7f8;
      --card:#ffffff;
      --muted:#6b7280;
      --accent:#0f172a;
      --glass: rgba(255,255,255,0.6);
      --shadow: 0 6px 18px rgba(15,23,42,0.08);
      --radius:12px;
      --maxw:1200px;
    }

    html,body{
      height:100%;
      margin:0;
      font-family: Inter, ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
      background: linear-gradient(180deg,var(--bg),#eef2f6 120%);
      color:var(--accent);
      -webkit-font-smoothing:antialiased;
      -moz-osx-font-smoothing:grayscale;
    }

    .wrap{
      max-width:var(--maxw);
      margin:32px auto;
      padding:20px;
    }

    .card{
      background:var(--card);
      border-radius:var(--radius);
      box-shadow:var(--shadow);
      overflow:hidden;
      border:1px solid rgba(15,23,42,0.03);
    }

    @media (max-width:720px){
      .wrap{ margin:16px; padding:12px;}
    }
  </style>
</head>
<body>
  <div class="wrap">
    <div class="card" role="region" aria-label="Power BI Dashboard">
      <slot />
    </div>
  </div>
</body>
</html>
